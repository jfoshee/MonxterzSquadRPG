<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Monxterz.SquadRpg.MauiClient.MainPage">
    <VerticalStackLayout Margin="10">
        <HorizontalStackLayout>
            <Button Text="Attack"
                    Command="{Binding AttackCommand}"/>
            <ActivityIndicator IsRunning="{Binding Path=AttackCommand.IsRunning}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="10">
            <StackLayout>
                <Label>My Characters</Label>
                <ListView ItemsSource="{Binding FriendlyNames}" />
            </StackLayout>
            <StackLayout>
                <Label>Enemies</Label>
                <ListView ItemsSource="{Binding EnemyNames}" />
            </StackLayout>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
